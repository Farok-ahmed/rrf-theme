                  </button>
                {% endif %}
              {% endfor %}
            </div>
          </div>
          {% comment %} size variant {% endcomment %}
          <div class="text-[#00000099] text-[16px] border-b border-gray-200 py-4">
            Select Size
            <div>
              {% for variant in product.variants %}
                {% if variant.option2 %}
                  <button
                    class="color-option px-4 py-2  border border-gray-300 rounded-full"
                    onclick="selectVariant({{ variant.id }})"
                  >
                    {{ variant.option2 }}
                  </button>
                {% endif %}
              {% endfor %}
              {% comment %} variant picker  {% endcomment %}
              {%- for option in product.options_with_values -%}
                {%- for option_value in option.values -%}
                  <input
                    id="{{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}"
                    type="radio"
                    name="{{ option.name }}-{{ option.position }}"
                    value="{{ option_value | escape }}"
                    {% if option_value.selected %}
                      checked
                    {% endif %}
                    {% unless option_value.available %}
                      class="disabled"
                    {% endunless %}
                  >
                  <label for="{{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}">
                    {{ option_value -}}
                  </label>
                {%- endfor -%}
              {%- endfor -%}
            </div>
          </div>
        {% endcomment %}
        {% comment %} add to cart button {% endcomment %}
        <div>
          <!-- Quantity Selector with Increment and Decrement -->
          <div class="quantity-selector mt-6 flex items-center gap-4">
            {% comment %}
              <div class="flex items-center gap-2 mt-4 bg-gray-200 w-1/3 rounded-full justify-center">
                <button id="decrement" class=" p-2 rounded-full">-</button>
                <input
                  type="number"
                  id="quantity"
                  value="1"
                  min="1"
                  class="text-center w-16    focus:outline-none"
                  readonly
                >
                <button id="increment" class=" p-2 rounded-full">+</button>
              </div>
              <!-- Add to Cart Button -->
              <div class="add-to-cart mt-6 w-2/3">
                <button id="add-to-cart" class="bg-black  text-white px-6 py-2.5 rounded-full w-full">Add to Cart</button>
              </div>
            {% endcomment %}
            {% form 'product', product %}
              <!-- Variant Selection -->
              <label for="variant">Choose a size:</label>
              <select name="id" id="variant">
                {% for variant in product.variants %}
                  <option
                    value="{{ variant.id }}"
                    {% if variant == product.selected_or_first_available_variant %}
                      selected
                    {% endif %}
                  >
                    {{ variant.title }} - {{ variant.price | money }}
                  </option>
                {% endfor %}
              </select>

              <!-- Quantity Input -->
              <div class="mt-6 flex items-center gap-4">
                <input
                  type="number"
                  id="quantity"
                  name="quantity"
                  value="1"
                  min="1"
                  class="focus:outline-none bg-gray-200 text-center p-[10px] rounded-full"
                >

                <!-- Add to Cart Button -->
                <input
                  type="submit"
                  value="Add to cart"
                  class="bg-black  text-white px-6 py-2.5 rounded-full w-[500px] cursor-pointer"
                >
              </div>
            {% endform %}

            {% comment %}
              <form method="post" action="/cart/add">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <div class="mt-6 flex items-center gap-4">
                  <input
                    min="1"
                    type="number"
                    id="quantity"
                    name="quantity"
                    value="1"
                    class="focus:outline-none bg-gray-200 text-center p-[10px] rounded-full"
                  >
                  <input
                    type="submit"
                    value="Add to cart"
                    class="bg-black  text-white px-6 py-2.5 rounded-full w-[500px]"
                  >
                </div>
              </form>
            {% endcomment %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
