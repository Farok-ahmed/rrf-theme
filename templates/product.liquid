  <script>
    jQuery(document).ready(function ($) {
      // Initially, hide all tab contents
      $('.tab-content').hide();

      // Show the content of the default active tab (Rating Reviews)
      $('#product-reviews').show();

      // When a tab button is clicked
      $('.rrf-product-tab button').click(function () {
        let index = $(this).index(); // Get the index of the clicked button

        // Remove 'active' class from all buttons
        $('.rrf-product-tab button').removeClass('active');

        // Add 'active' class to the clicked button
        $(this).addClass('active');

        // Hide all tab content and show the one corresponding to the clicked button
        $('.tab-content').hide().eq(index).show(); // Show the corresponding tab content
      });
    });
  </script>
