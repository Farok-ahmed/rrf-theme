<div>
  <div class="container">
    <div class="flex justify-between gap-12">
      {% comment %} product image  {% endcomment %}
      <div class="w-2/4">
        <div class="flex ">
          <div class="w-2/6">
            <div class="flex flex-col gap-2">
              {% for image in product.images %}
                <img src="{{ image.src | img_url: 'small' }}" alt="Product Image" class="w-[170px] object-cover">
              {% endfor %}
            </div>
          </div>
          <div class="w-4/6">
            <img src="{{ product.featured_image | img_url: 'large' }}" alt="Featured Image" class="w-full object-cover">
          </div>
        </div>
      </div>
      {% comment %} product content  {% endcomment %}
      <div class="w-2/4">
        <h1 class="font-bold text-4xl">{{ product.title }}</h1>
