{% comment %} cart detailes {% endcomment %}
<div>
  <div class="container">
    <div class="flex justify-between items-start gap-4  ">
      <div class="w-8/12 border border-gray-200 rounded-xl p-6">
        {% for item in cart.items %}
          <div class="flex justify-between gap-4 border-b border-gray-200 py-4">
            <div class="w-2/12">
              {{ item.image | image_url: width: 1500 | image_tag }}
            </div>
            <div class="w-8/12 space-y-4">
              <div class="font-bold text-xl text-black">{{ item.title }}</div>
              <div class="text-sm text-black">Size: {{ item.variant }}</div>
              <div class="text-sm text-black">Color: Black</div>
              <div class="text-2xl font-bold text-black">{{ item.price | money }}</div>
            </div>
            <div class="w-2/12 flex flex-col justify-between items-end">
              <div>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.25 4.5H16.5V3.75C16.5 3.15326 16.2629 2.58097 15.841 2.15901C15.419 1.73705 14.8467 1.5 14.25 1.5H9.75C9.15326 1.5 8.58097 1.73705 8.15901 2.15901C7.73705 2.58097 7.5 3.15326 7.5 3.75V4.5H3.75C3.55109 4.5 3.36032 4.57902 3.21967 4.71967C3.07902 4.86032 3 5.05109 3 5.25C3 5.44891 3.07902 5.63968 3.21967 5.78033C3.36032 5.92098 3.55109 6 3.75 6H4.5V19.5C4.5 19.8978 4.65804 20.2794 4.93934 20.5607C5.22064 20.842 5.60218 21 6 21H18C18.3978 21 18.7794 20.842 19.0607 20.5607C19.342 20.2794 19.5 19.8978 19.5 19.5V6H20.25C20.4489 6 20.6397 5.92098 20.7803 5.78033C20.921 5.63968 21 5.44891 21 5.25C21 5.05109 20.921 4.86032 20.7803 4.71967C20.6397 4.57902 20.4489 4.5 20.25 4.5ZM10.5 15.75C10.5 15.9489 10.421 16.1397 10.2803 16.2803C10.1397 16.421 9.94891 16.5 9.75 16.5C9.55109 16.5 9.36032 16.421 9.21967 16.2803C9.07902 16.1397 9 15.9489 9 15.75V9.75C9 9.55109 9.07902 9.36032 9.21967 9.21967C9.36032 9.07902 9.55109 9 9.75 9C9.94891 9 10.1397 9.07902 10.2803 9.21967C10.421 9.36032 10.5 9.55109 10.5 9.75V15.75ZM15 15.75C15 15.9489 14.921 16.1397 14.7803 16.2803C14.6397 16.421 14.4489 16.5 14.25 16.5C14.0511 16.5 13.8603 16.421 13.7197 16.2803C13.579 16.1397 13.5 15.9489 13.5 15.75V9.75C13.5 9.55109 13.579 9.36032 13.7197 9.21967C13.8603 9.07902 14.0511 9 14.25 9C14.4489 9 14.6397 9.07902 14.7803 9.21967C14.921 9.36032 15 9.55109 15 9.75V15.75ZM15 4.5H9V3.75C9 3.55109 9.07902 3.36032 9.21967 3.21967C9.36032 3.07902 9.55109 3 9.75 3H14.25C14.4489 3 14.6397 3.07902 14.7803 3.21967C14.921 3.36032 15 3.55109 15 3.75V4.5Z" fill="#FF3333"/>
                </svg>
              </div>
              <div class="flex items-center gap-2 mt-4 bg-gray-200  rounded-full justify-center">
                <button id="decrement" class=" p-2 rounded-full">-</button>
                <input
                  type="number"
                  id="quantity"
                  value="1"
                  min="1"
                  class="text-center w-16    focus:outline-none"
                  readonly
                >
                <button id="increment" class=" p-2 rounded-full">+</button>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="w-4/12 border border-gray-200 rounded-xl p-6 ">
        <div class="font-bold text-2xl text-black">Order Summary</div>
        <div class="flex items-center justify-between text-xl py-4">
          <span>Subtotal</span>
          <span class="font-bold ">{{ cart.items_subtotal_price | money }}</span>
        </div>
        <div class="flex items-center justify-between text-xl pb-4">
          <span>Discount (-20%)</span>
          <span class="font-bold text-red-500">{{ cart.total_discount }}</span>
        </div>
        <div class="flex items-center justify-between text-xl border-b border-gray-200 pb-4">
          <span>Delivery Fee</span>
          <span class="font-bold ">$15</span>
          <!-- Add this code to your cart template (e.g., cart.liquid) -->

          {% if cart.shipping_lines.size > 0 %}
            <div class="shipping-cost">
              <h3>Shipping Details</h3>
              {% for shipping_line in cart.shipping_lines %}
                <p>
                  <strong>{{ shipping_line.title }}:</strong>
                  {{ shipping_line.price | money }}
                </p>
              {% endfor %}
            </div>
          {% else %}
            <p>No shipping options available at this time.</p>
          {% endif %}
        </div>
        <div class="flex items-center justify-between text-xl py-4">
          <span>Total</span>
          <span class="font-bold ">{{ cart.original_total_price | money }}</span>
        </div>
        <button id="add-to-cart" class="bg-black  text-white px-6 py-2.5 rounded-full w-full">Add to Cart</button>
      </div>
    </div>
  </div>
</div>
