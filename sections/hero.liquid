<section class="bg-[#F2F0F1]">
  <div class="container">
    <div class="flex flex-col-reverse md:flex-row  items-center">
      <div class="w-full md:w-1/2 pr-20">
        <h2 class=" text-4xl  md:text-[64px] leading-10 md:leading-[64px] mb-4">
          {{ section.settings.heading }}
        </h2>
        <div class="max-w-lg">
          <p class="py-2">
            {{ section.settings.body }}
          </p>
          <button class="rounded-full  px-16 my-4 py-4 text-white bg-black">
            <a href="{{ section.settings.url }}">
              {{- section.settings.link_text -}}
            </a>
          </button>
        </div>
        <div class="flex">
          {% for item in (1..3) %}
            <div class="w-1/3 ">
              <div class="font-bold text-black text-4xl">200+</div>
              <p class="text-[#00000099]">International Brands</p>
            </div>
          {% endfor %}
        </div>
      </div>
      <div class="w-full md:w-1/2 flex justify-end">
        <div class="relative right-0 md:-right-20"><img src="{{ 'hero.png' | asset_url }}" alt=""></div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "hero-section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FIND CLOTHES THAT MATCHES YOUR STYLE"
    },
    {
      "type": "inline_richtext",
      "id": "body",
      "label": "Body",
      "default": "Browse through our diverse range of meticulously crafted garments, designed to bring out your individuality and cater to your sense of style."
    },
    {
      "type": "url",
      "id": "url",
      "label": "Url"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "hero"
    }
  ]
}
{% endschema %}
